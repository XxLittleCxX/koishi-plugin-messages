{
  "name": "@root/messages",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "build:types": "yakumo tsc",
    "build:server": "yakumo esbuild",
    "build:client": "yakumo client",
    "build": "yarn build:server && yarn build:types && yarn build:client",
    "bump": "yakumo version",
    "client": "yakumo client",
    "docs:dev": "vitepress dev docs --open",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages plugins --ext=ts --cache",
    "test": "yakumo mocha -r esbuild-register -r yml-register",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@koishijs/plugin-database-memory": "^2.3.1",
    "@koishijs/plugin-mock": "^2.4.2",
    "@koishijs/vitepress": "^1.6.5",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.15.3",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "c8": "^7.13.0",
    "esbuild": "^0.17.12",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.36.0",
    "eslint-plugin-mocha": "^10.1.0",
    "jest-mock": "^28.1.3",
    "mocha": "^9.2.2",
    "sass": "^1.59.3",
    "shx": "^0.3.4",
    "typescript": "^4.9.5",
    "yml-register": "^1.1.0",
    "yakumo": "^0.3.9",
    "yakumo-esbuild": "^0.3.22",
    "yakumo-esbuild-yaml": "^0.3.1",
    "yakumo-mocha": "^0.3.1",
    "yakumo-publish": "^0.3.3",
    "yakumo-publish-sync": "^0.3.2",
    "yakumo-tsc": "^0.3.7",
    "yakumo-upgrade": "^0.3.2",
    "yakumo-version": "^0.3.2",
    "vitepress": "1.0.0-alpha.34"
  }
